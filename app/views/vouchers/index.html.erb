<div>
  <header>
    <div class="mx-auto px-4 py-8">
      <div class="flex items-center justify-end">
        <% if user_signed_in? %>
        <div class="flex">
          <%= link_to 'マイコードをシェア', "/users/#{current_user.user_name}", class: "block
          rounded-md bg-gray-100 px-3 py-2.5 mx-2 text-sm font-medium text-black transition
          hover:text-black/75" %>
        </div>
        <div class="flex">
          <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete},
          class: "block rounded-md bg-gray-100 px-3 py-2.5 mx-2 text-sm font-medium text-black
          transition hover:text-black/75" %>
        </div>
        <% else %>
        <div>
          <ul class="flex">
            <li class="block">
              <%= link_to 'ログイン', new_user_session_path, class: "rounded-md bg-gray-100 px-5
              py-2.5 mx-3 text-sm font-medium text-black transition hover:text-black/75" %>
            </li>
            <li class="block">
              <%= link_to '新規登録', new_user_registration_path, class: "rounded-md bg-gray-100
              px-5 py-2.5 mx-3 text-sm font-medium text-black transition hover:text-black/75" %>
            </li>
          </ul>
        </div>
        <% end %>
      </div>
    </div>
  </header>
  <main class="container mx-auto mt-4 px-5 flex">
    <div>
      <% @vouchers.each do |voucher| %> <% if voucher.user_id == current_user.id %>
      <div class="mx-4 mt-2 rounded-lg bg-white shadow">
        <%= link_to voucher_path(voucher.id) do %>
        <div class="p-4">
          <h3 class="text-xl font-medium text-gray-900"><%= voucher.title %></h3>
          <p class="mt-1 text-gray-500"><%= voucher.date %></p>
        </div>
        <%end%>
      </div>
      <%end%> <%end%>
    </div>

    <%= link_to new_voucher_path, class: "fixed bottom-8 left-0 right-0 mx-auto rounded-full border
    border-gray-100 bg-slate-100 w-24 h-24 p-4 text-center text-lg font-medium text-gray-700
    bg-slate-100 shadow-sm transition-all hover:text-slate-100 hover:bg-gray-700 focus:ring
    focus:ring-primary-200 disabled:cursor-not-allowed disabled:border-primary-300
    disabled:bg-primary-300" do %>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
      fill="currentColor"
      class="h-full w-full"
    >
      <path
        d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"
      />
    </svg>
    <%end%>
  </main>
</div>
