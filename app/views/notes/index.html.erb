<div>
    <header>
        <div class="mx-auto px-4 py-8">
            <div class="flex items-center justify-end">
            <% if user_signed_in? %>
                <div class="flex">
                <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete} %>
                </div>
            <% else %>
                <div class="flex">
                <%= link_to 'ログイン', new_user_session_path, class: "block rounded-md bg-gray-100 px-5 py-2.5 mx-3 text-sm font-medium text-teal-600 transition hover:text-teal-600/75" %>
                
                <%= link_to '新規登録', new_user_registration_path, class: "block rounded-md bg-gray-100 px-5 py-2.5 mx-3 text-sm font-medium text-teal-600 transition hover:text-teal-600/75" %>
                </div>
            <% end %>
            </div>
        </div>
    </header>
    <main class="container mx-auto mt-28 px-5 flex">
        <h1 class="text-3xl font-bold underline">
            Hello world!
        </h1>
    </main>
</div>