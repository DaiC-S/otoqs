<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do
|f| %>

<div class="flex items-center justify-center">
  <div class="relative block">
    <a class="text-white" href="#">
      <span class="">Home</span>
      <svg
        class="h-1 sm:h-2.5"
        viewBox="0 0 10 10"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      ></svg>
    </a>

    <h2 class="mt-6 text-2xl font-bold text-gray-500 sm:text-3xl md:text-4xl">
      おかえりなさい！
    </h2>

    <p class="mt-4 leading-relaxed text-gray-500">
      以下の必須項目を正しく入力してください。
    </p>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt-2">
      <label
        for="email"
        class="block mb-1 text-sm font-medium text-gray-700 after:ml-0.5 after:text-red-500 after:content-['*必須']"
        >メールアドレス</label
      >
      <%= f.email_field :email, class: "rounded-md w-80", placeholder:
      "you@mail.com", autocomplete: "email" %>
    </div>

    <div class="mt-2">
      <label
        for="password"
        class="mb-1 block text-sm font-medium text-gray-700 after:ml-0.5 after:text-red-500 after:content-['*必須']"
        >パスワード</label
      >
      <%= f.password_field :password, class: "rounded-md w-80", placeholder:
      "*半角英数字のみ・6字以上", autocomplete: "new-password" %>
    </div>

    <div class="mt-16">
      <%= f.submit 'ログインする', class:"rounded-md border border-black
      bg-black px-12 py-3 text-sm font-medium text-white transition
      hover:bg-transparent hover:text-black" %>
    </div>
  </div>
</div>
<% end %>
